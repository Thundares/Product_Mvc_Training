@model IEnumerable<MVC_test.Models.Produtos>
@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">Página de Produtos</h1>
    <p>Mostrando os produtos de nosso DataBase</a>.</p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelp => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelp => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelp => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelp => item.Preco)
                    </td>
                </tr>
            }
        </tbody>
</div>
